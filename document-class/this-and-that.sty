\newcommand{\banner}[2]
  {
    \tikz[remember picture,overlay] {
      \node[rectangle, fill=black, anchor=north, minimum width=\paperwidth, minimum height=3.5cm](banner) at (current page.north){};%
      \node[draw=none](primary) at (banner) {
        {\Huge \color{white}#1}
      };
      \node[draw=none, below](secondary) at (primary.south){\color{white}#2};%
    }
    \vspace{3cm}
  }
